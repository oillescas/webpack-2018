{
  "name": "webpack-starter-kit",
  "version": "1.0.0",
  "description": "Un kit de inicio para trabajar con Webpack ",
  "main": "webpack.config.js",
  "scripts": {
    "dev": "webpack --mode development",
    "build": "webpack --mode production",
    "dev2": "webpack --mode development ./foo/src/index.js --output ./foo/main.js",
    "build2": "webpack --mode production ./foo/src/index.js --output ./foo/main.js",
    "dev-babel": "webpack --mode development --module-bind js=babel-loader",
    "build-babel": "webpack --mode production --module-bind js=babel-loader",
    "start": "webpack-dev-server --mode  development --open"
  },
  "author": "@jonmircha",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "css-loader": "^0.28.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.1",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  }
}
